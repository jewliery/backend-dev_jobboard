<%= form_with(model: @job, local: true) do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div>
      <%= form.label :description %>
      <%= form.text_area :description, size: '60x6' %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>